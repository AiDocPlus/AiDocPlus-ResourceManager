{
  "name": "aidocplus-resource-manager",
  "version": "0.1.0",
  "private": true,
  "description": "AiDocPlus Resource Manager - Independent resource management tools",
  "scripts": {
    "dev:roles": "pnpm --filter @aidocplus/roles-manager tauri dev",
    "dev:ai-providers": "pnpm --filter @aidocplus/ai-providers-manager tauri dev",
    "dev:prompt-templates": "pnpm --filter @aidocplus/prompt-templates-manager tauri dev",
    "dev:project-templates": "pnpm --filter @aidocplus/project-templates-manager tauri dev",
    "dev:doc-templates": "pnpm --filter @aidocplus/doc-templates-manager tauri dev",
    "dev:plugins": "pnpm --filter @aidocplus/plugins-manager tauri dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.10.0",
    "@types/node": "^25.2.3",
    "turbo": "^2.8.9",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": ["esbuild"]
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@10.29.1"
}
